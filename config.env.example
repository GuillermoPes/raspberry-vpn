# Configuración de ejemplo para Raspberry Pi VPN Server
# Copia este archivo a .env y modifica los valores según tus necesidades

# IP pública o dominio de tu servidor
SERVERURL=auto

# Configuración de Pi-hole
PIHOLE_PASSWORD=cambiar_por_password_segura

# Zona horaria
TZ=Europe/Madrid

# Configuración de WireGuard
PEERS=5
SERVERPORT=51820
INTERNAL_SUBNET=10.14.14.0  # Subred VPN separada de la red Docker

# Configuración de red
# Red Docker: 10.13.13.0/24 (servicios internos)
# Red WireGuard: 10.14.14.0/24 (clientes VPN)
PIHOLE_DNS=10.13.13.3#5335
PIHOLE_IP=10.13.13.100
UNBOUND_IP=10.13.13.3
WIREGUARD_IP=10.13.13.2

# Configuración del sistema
PUID=1000
PGID=1000

# Configuración de Watchtower
WATCHTOWER_POLL_INTERVAL=86400  # 24 horas en segundos

# Configuración de Nginx Proxy Manager
# (Las credenciales iniciales son admin@example.com / changeme)

# Configuración de Portainer
# (Se configura en el primer acceso)

# Configuración adicional
COMPOSE_PROJECT_NAME=vpn-server 